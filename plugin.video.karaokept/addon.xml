<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.karaokept"
       name="Karaoke Portugues"
       version="0.0.07"
       provider-name="fightnight">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.t0mm0.common" version="1.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Cantar no XBMC</summary>
        <description>Canta as melhores musicas portuguesas ja disponiveis neste addon.</description>
	<disclaimer>Necessitas de uma conta abelhas para utilizar este addon.</disclaimer>
        <platform>all</platform>
    </extension>
</addon>